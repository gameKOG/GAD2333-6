using UnityEngine;
using System.Collections;

public class Hello : MonoBehaviour {

	public string name;

	public void Main ()
	{
		SayHello (name);
		SayGoodbye ();
	}
	// Use this for initialization
	void Start () 
	{
	
	}
	
	// Update is called once per frame
	void Update () 
	{
	
	}
	public void SayHello (string passedName)
	{
		print ("Hello, " + passedName);	//Your code gives you the yellow error because it will run, but isn't sure
	}					//if you meant to print 'name' from Main() or SayHello().
	public void SayGoodbye ()		//Avoid the issue by using a different variable name in each function. Main() will
	{					//stick the value of its string into the function it calls. That way other functions
		print ("Goodbye... ");		//in a complex game can share functions so you don't have to recode them.
	}					//I changed the variable name inside SayHello to show you.
}
